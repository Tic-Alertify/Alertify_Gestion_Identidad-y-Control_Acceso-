# ─── Base de Datos SQL Server (runtime - PrismaMssql adapter) ───────────────
DB_HOST=localhost
DB_PORT=1433
DB_NAME=AlertifyDB
DB_USER=sa
DB_PASSWORD=TuContraseñaSegura

# Habilitar TLS 
DB_ENCRYPT=false
DB_TRUST_SERVER_CERTIFICATE=true

# URL para el CLI de Prisma (migraciones: prisma migrate dev)
DATABASE_URL="sqlserver://localhost:1433;database=AlertifyDB;user=sa;password=TuContraseñaSegura;trustServerCertificate=true"

# ─── JWT ─────────────────────────────────────────────────────────────────────
# Genera un secreto seguro: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=cambia-este-secreto-por-uno-seguro-de-al-menos-32-caracteres
JWT_EXPIRATION=1h

# ─── Servidor ────────────────────────────────────────────────────────────────
PORT=3000
